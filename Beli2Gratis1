import java.io.*;
public class Beli2Gratis1{
  public static void main (String[]args) throws IOException{
    BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
   //variabel
    int jumlahbarang ;
    int bonus;
    int total;
    int harga;
    //output
    System.out.println("=====================");
    System.out.println("     Toko SOUVENIR   ");
    System.out.println("Promo beli 2 gratis 1"); 
    System.out.println("=====================");
     System.out.println();
    System.out.println("harga 1 souvenir 20000");
    
    System.out.println("Jumlah Barang yang dibeli= ");
    jumlahbarang=Integer.parseInt(br.readLine());
    bonus=(jumlahbarang/2);
    total=(jumlahbarang*20000);
     
     System.out.println("Jumlah Barang : "+jumlahbarang+", jumlah bonus "+bonus);
   
      
  System.out.println();
  System.out.println("Total Barang "+(jumlahbarang+bonus));    
   System.out.println("Total Harga Rp. "+total);  
  }
}
